{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "webroot",
        "version": "4.2.2",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.2.2.zip"
        },
        "require" : {
          "fancyguy/webroot-installer": "1.0.0"
        }
      }
    }
  ],
  "require": {
    "wordpress": "4.*",
    "fancyguy/webroot-installer": "1.0.0",
		"wcm/wp-importer":"dev-master"
  },
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"secure-http": false
		},
  "extra": {
    "webroot-dir": "public/wp",
    "webroot-package": "wordpress"
  }
}
